<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Job Postings</title>
</head>

<body>
    <%- include('./partials/script.ejs') %>
        <% if (locals.job_data) { %>
            <div class="container mt-3">
                <div class="row row-cols-3">
                    <% job_data.forEach(job=> { %>
                        <div class="row" style="display: flex; flex-wrap: wrap; gap: 20px;">
                            <div class="col">
                                <a href="<%= job.link_to_job %>" style="
                                       display: block;
                                       width: 18rem;
                                       background-color: #fff;
                                       border-radius: 8px;
                                       box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                                       overflow: hidden;
                                       text-decoration: none;
                                       color: inherit;
                                       transition: transform 0.3s ease, box-shadow 0.3s ease;
                                       position: relative;
                                   "
                                    onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 6px 12px rgba(0, 0, 0, 0.15)';"
                                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 6px rgba(0, 0, 0, 0.1)';">
                                    <div class="card-body" style="padding: 15px;">
                                        <h3 class="card-title"
                                            style="font-size: 1.5rem; margin-bottom: 10px; color: #333;">
                                            <%= job.title %>
                                        </h3>
                                        <span class="card-company"
                                            style="display: block; font-size: 0.9rem; color: #777; margin-bottom: 5px;">
                                            <%= job.company %>
                                        </span>
                                        <span class="card-time-posted"
                                            style="display: block; font-size: 0.9rem; color: #777; margin-bottom: 5px;">
                                            <%= job.time_posted %>
                                        </span>
                                        <span class="card-location"
                                            style="display: block; font-size: 0.9rem; color: #777; margin-bottom: 5px;">
                                            <%= job.location %>
                                        </span>
                                    </div>
                                    <!-- Accent Line on the Left -->
                                    <div style="
                                        content: '';
                                        height: 100%;
                                        width: 5px;
                                        background-color: #007BFF;
                                        position: absolute;
                                        top: 0;
                                        left: 0;
                                    "></div>
                                </a>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
            <% } %>
</body>

</html>
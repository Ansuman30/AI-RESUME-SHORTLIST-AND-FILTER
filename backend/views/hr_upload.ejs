<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Upload-Page</title>
</head>

<body>
    <%- include('./partials/script.ejs') %>
        <div class="container mt-10">
            <form action="/company/upload" method="post" enctype="multipart/form-data">
                <div class="file1 mt-3">
                    <label for="file1" class="form-label">Resumes</label>
                    <input type="file" class="form-control" id="file1" name="files" aria-describedby="file1" multiple>
                </div>
                <label for="dropdown">Choose the Role you are Searching for:</label>
                <select name="dropdown" id="dropdown" required>
                    <option value="" disabled selected>Select your option</option>
                    <% role_op.forEach(function(item) { %>
                        <option value="">
                            <%= item %>
                        </option>
                        <% }); %>
                </select>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
</body>

</html>